[profile.dev]
opt-level = "z"

[profile.release]
opt-level = "z"

[workspace]
members = ["dnas/*/zomes/coordinator/*", "dnas/*/zomes/integrity/*"]
resolver = "2"

[workspace.dependencies]
hdi = "={{hdi_version}}"
hdk = "={{hdk_version}}"
serde = "1.0"

# The following should be removed when upgrading to Holochain 0.4
home = "=0.5.9"

[workspace.dependencies.hello_world]
path = "dnas/hello_world/zomes/coordinator/hello_world"

[workspace.dependencies.hello_world_integrity]
path = "dnas/hello_world/zomes/integrity/hello_world"
